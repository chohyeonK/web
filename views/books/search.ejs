<div class="row">
    <div class="col my-5">
        <h1 class="text-center mb-5">도서검색</h1>
        <div class="row justify-content-end my-2">
            <form class="col-6 col-m-4 col-l-3" name="frm">
                <div class="input-group">
                    <input class="form-control" name="query" value="java">
                    <button class="btn btn-primary">검색</button>
                </div>
            </form>
        </div>
        <div id="div_books"></div>
    </div>
</div>
<!-- 도서목록 템플릿 -->
<script type="x-handlebars-template" id="temp_books">
    <table class="table">
        {{#each documents}}
            <tr>
                <td><img src="{{thumbnail}} width="50px" /></td>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td>{{authors}}</td>
            </tr>
        {{/each}}
    </table>
</script>
<script>
    let query = $(frm.query).val();
    getBooks();

    $(frm).on("submit", function(e) {
        event.preventDefault(); // submit 이벤트를 막아줌
        query = $(frm.query).val();
        getBooks();
    })

    // 도서 검색 목록 가져오기
    function getBooks() {
        $.ajax({
            type: "get",
            url: "https://dapi.kakao.com/v3/search/book?target=title",
            headers: {
                "Authorization": 'KakaoAK 4bd49664276814dcb7b781c356330e86'
            },
            data: { query: query, page: 1},
            success: function(data) {
                console.log('data', data);
                let temp = Handlebars.compile($("#temp_books").html());
                $('#div_books').html(temp(data));
            }
        });
    }
</script>